class Controller_stihi extends Model_stihi{


    function getOnePoem($poemId)
    {
    $poemIdA = array($poemId);
    $poem = Model_stihi::selectPoemForId($poemIdA);
    return $poem;
    }

    
    function wrightPoem($nick, $poem_name, $poem_text)
    {
    $nickInArray = array($nick);
    $userObj = new Controller_user;
    $user = $userObj -> getUserFromNick($nickInArray);
    print_r($user); 
    $values = array($user['id'], $poem_name, $poem_text);
    print_r($values);
    Model_stihi::createNewPoetry($values);
    }
}
